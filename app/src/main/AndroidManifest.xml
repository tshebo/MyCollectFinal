<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- <uses-permission android:name="android.permission.CAMERA" -->
    <!-- tools:ignore="PermissionImpliesUnsupportedChromeOsHardware" /> -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/splash"
        android:label="@string/MyCollect"
        android:roundIcon="@mipmap/splash"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyCollectFinal"
        tools:targetApi="31">
        <activity
            android:name=".Achievements"
            android:exported="false" />
        <activity
            android:name=".EditItem"
            android:exported="false" />
        <activity
            android:name=".ViewSelectedCollection"
            android:exported="false" />
        <activity
            android:name=".AddItem"
            android:exported="false" />
        <activity
            android:name=".AddCollection"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Home"
            android:exported="false" />
        <activity
            android:name=".ViewCollections"
            android:exported="false"
            android:label="@string/title_activity_view_collections"
            android:theme="@style/Theme.MyCollectFinal.NoActionBar" />
        <activity
            android:name=".LogIn"
            android:exported="false"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.MyCollectFinal.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignUp"
            android:exported="false"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.MyCollectFinal.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Splash"
            android:exported="true"
            android:label="Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>